- model_class = Job
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @job.name
%p
  %strong= model_class.human_attribute_name(:score) + ':'
  %br
  = @job.score
%p
  %strong= model_class.human_attribute_name(:setupcost) + ':'
  %br
  = @job.setupcost


= link_to t('.back', :default => t("helpers.links.back")), jobs_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_job_path(@job), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), job_path(@job), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
