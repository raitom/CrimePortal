- model_class = Affectation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:gangster_id) + ':'
  %br
  = @affectation.gangster_id
%p
  %strong= model_class.human_attribute_name(:job_id) + ':'
  %br
  = @affectation.job_id
%p
  %strong= model_class.human_attribute_name(:salary) + ':'
  %br
  = @affectation.salary


= link_to t('.back', :default => t("helpers.links.back")), affectations_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_affectation_path(@affectation), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), affectation_path(@affectation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
