- model_class = Organisation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @organisation.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @organisation.description
%p
  %strong= model_class.human_attribute_name(:theboss) + ':'
  %br
  = @organisation.theboss


= link_to t('.back', :default => t("helpers.links.back")), organisations_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_organisation_path(@organisation), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), organisation_path(@organisation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
