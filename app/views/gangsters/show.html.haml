- model_class = Gangster
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @gangster.name
%p
  %strong= model_class.human_attribute_name(:nickname) + ':'
  %br
  = @gangster.nickname
%p
  %strong= model_class.human_attribute_name(:badness) + ':'
  %br
  = @gangster.badness
%p
  %strong= model_class.human_attribute_name(:organisation_id) + ':'
  %br
  = @gangster.organisation_id


= link_to t('.back', :default => t("helpers.links.back")), gangsters_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_gangster_path(@gangster), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), gangster_path(@gangster), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
